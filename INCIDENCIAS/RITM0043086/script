SELECT * FROM EXT.RECIBOS_FACTURAS WHERE POSITIONNAME = '2039-0000' AND IDRECIBO IN (3277,3697,3969)


CREATE COLUMN TABLE EXT.RECIBOS_FACTURAS_BKP_20241107 AS (SELECT * FROM EXT.RECIBOS_FACTURAS)

UPDATE EXT.RECIBOS_FACTURAS 
SET ESTADO = 'ENVIADO', MODIF_DATE = CURRENT_TIMESTAMP
WHERE POSITIONNAME = '2039-0000' AND IDRECIBO IN (3277,3697,3969) 